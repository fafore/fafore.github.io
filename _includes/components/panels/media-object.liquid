<h2 class="section-title">
  {{ page.components.panels.media-object.title }}
</h2>

<div class="row">
  <div class="col-sm-6">
    <h3>{{ page.components.panels.media-object.subtitle }}</h3>
    <p class="text-justify py-3">{{ page.components.panels.media-object.body }}</p>

    <div class="row">
      {% for media-object in page.components.panels.media-object.media-objects %}
        <div class="col-xs-6">
          {% include components/media-object/bootstrap.liquid 
              icon=media-object.icon
              body=media-object.body
          %}
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="col-sm-6">
    <img
      src="{{ page.components.panels.media-object.title | slugify | prepend: '/assets/components/panels/' | append: '.jpg' | relative_url }}"
      alt="{{ page.components.panels.media-object.title }}" />
  </div>
</div>
