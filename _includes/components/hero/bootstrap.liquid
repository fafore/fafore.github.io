<div class="hero" style="background: url('{{ '/assets/components/hero/background.jpg' | relative_url }}') no-repeat; background-size: cover;">
  <img class="visible-xs-block" src="{{ '/assets/components/hero/background.jpg' | relative_url }}"/>
  <div class="hero-content">
    <div class="container-fluid">
      <div class="hero-content-inner">
        <h1 class="text-danger">{{ include.title }}</h1>
        <p>{{ include.description }}</p>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="col-sm-6 col-sm-offset-6 col-md-4 col-md-offset-8 form">
      {% include components/forms/bootstrap.liquid %}
    </div>
  </div>
</div>
